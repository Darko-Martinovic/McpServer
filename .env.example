# =============================================================================
# McpServer Environment Configuration
# =============================================================================
# This file contains environment variables used by the McpServer application.
# Copy this file to .env and update the values according to your environment.

# =============================================================================
# Azure Cognitive Search Configuration
# =============================================================================
# These are used for MCP tool indexing and search functionality
COGNITIVESEARCH_ENDPOINT=https://your-search-service.search.windows.net
COGNITIVESEARCH_APIKEY=your-search-service-admin-key

# =============================================================================
# Azure OpenAI Configuration  
# =============================================================================
# These are used for AI conversation features in the chat endpoints
AOAI_ENDPOINT=https://your-aoai-resource.openai.azure.com
AOAI_APIKEY=your-aoai-api-key
CHATCOMPLETION_DEPLOYMENTNAME=gpt-4o
EMBEDDING_DEPLOYMENTNAME=text-embedding-ada-002

# =============================================================================
# Database Configuration (Alternative to appsettings.json)
# =============================================================================
# If you prefer to use environment variables instead of appsettings.json
# DATABASE_CONNECTION_STRING=Server=localhost\\SQLEXPRESS;Database=SupermarketDB;Integrated Security=true;TrustServerCertificate=true;

# =============================================================================
# Application Configuration
# =============================================================================
# Application mode: auto, web, console, or dual
APPLICATION_MODE=auto

# Web API port (when using --web argument)
WEB_API_PORT=9090

# Logging level: Debug, Information, Warning, Error
LOG_LEVEL=Information

# =============================================================================
# Optional Configuration
# =============================================================================
# Enable verbose logging for debugging
VERBOSE_LOGGING=false

# Enable Swagger UI in production (not recommended)
ENABLE_SWAGGER_IN_PRODUCTION=false