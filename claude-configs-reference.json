// ================================
// DEVELOPMENT CONFIGURATION
// Use when actively developing and making frequent changes
// Requires manual Claude Desktop restarts after code changes
// ================================
{
  "mcpServers": {
    "supermarket-dev": {
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "D:\\DotNetOpenAI\\McpServer",
        "--no-build"
      ]
    }
  }
}

// ================================
// PRODUCTION CONFIGURATION (RECOMMENDED)
// Use for stable testing with published executable
// Run build-and-publish.ps1 after code changes
// ================================
{
  "mcpServers": {
    "supermarket": {
      "command": "D:\\DotNetOpenAI\\McpServer\\publish\\McpServer.exe"
    }
  }
}
