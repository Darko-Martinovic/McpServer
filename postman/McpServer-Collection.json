        },
        {
          "name": "Get Detailed Inventory",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/supermarket/inventory/detailed",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
